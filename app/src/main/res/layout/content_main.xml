<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="246dp"
        android:layout_height="248dp"
        app:srcCompat="@mipmap/test_display" />

    <Button
        android:id="@+id/btnLoginTwitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="291dp" />

    <Button
        android:id="@+id/btnUpdateStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update/Tweet idk"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="291dp" />

    <Button
        android:id="@+id/btnLogoutTwitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        tools:layout_editor_absoluteX="290dp"
        tools:layout_editor_absoluteY="291dp" />

    <TextView
        android:id="@+id/lblUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tweet"
        tools:layout_editor_absoluteX="274dp"
        tools:layout_editor_absoluteY="57dp" />

    <TextView
        android:id="@+id/lblUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        tools:layout_editor_absoluteX="274dp"
        tools:layout_editor_absoluteY="99dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtUpdateStatus"
        android:layout_width="130dp"
        android:layout_height="91dp"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="147dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="hint"
            android:text="Insert tweet here" />
    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>